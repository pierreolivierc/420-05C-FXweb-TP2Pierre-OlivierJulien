{% extends "base.jinja" %}

{% block titre %}
    {{ titre_page }} | FAKE
{% endblock %}

{% block contenu %}

    <section class="m-4">
        <div class="d-flex justify-content-center">
            <form action="" class="border border-dark p-3 rounded fs-3 m-2">
                <div class="d-flex flex-column">
                    <label for="nom">Nom d'utilisateur :</label>
                    <input name="nom" id="nom" type="text">
                </div>
                <div class="d-flex flex-column">
                    <label for="mdp">Mot de passe :</label>
                    <input name="mdp" id="mdp" type="text">
                </div>
                <div class="d-flex flex-row-reverse m-3">
                    <input class="px-3 btn btn-secondary" value="{{ bouton_soumettre }}" type="submit">
                </div>
            </form>
        </div>
    </section>

{% endblock %}