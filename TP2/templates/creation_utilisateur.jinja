{% extends "base.jinja" %}

{% block titre %}
    Création d'utilisateur | FAKE
{% endblock %}

{% block contenu %}

    <section class="m-4">
        {% with message = get_flashed_messages() %}
            {% if message %}
                <div class="retroactions bg-danger text-white m-2 p-2 rounded fs-2">
                    <p>{{ message[0] }}</p>
                </div>
            {% endif %}
        {% endwith %}
        <div class="d-flex justify-content-center">
            <form action="/compte/creer_compte" method="post" class="border border-dark p-3 rounded fs-3 m-2">
                <div class="d-flex flex-column">
                    <label for="courriel">Courriel :</label>
                    <input name="courriel" id="courriel" type="text">
                </div>
                <div class="d-flex flex-column">
                    <label for="mdp">Mot de passe :</label>
                    <input name="mdp" id="mdp" type="text">
                </div>
                <div class="d-flex flex-column">
                    <label for="mdp2">Confirmer le mot de passe :</label>
                    <input name="mdp2" id="mdp2" type="text">
                </div>
                <div class="d-flex flex-row-reverse m-3">
                    <input class="px-3 btn btn-secondary" value="Créer l'utilisateur" type="submit">
                </div>
            </form>
        </div>
    </section>

{% endblock %}